<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainlogo"
        android:layout_margin="30dp"
        android:id="@+id/reglogoid"

        />



<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbackground"
    android:hint="Full Name"
    android:textSize="20dp"
    android:id="@+id/signupnameid"
    android:layout_margin="7dp"
    android:textAlignment="center"
    android:inputType="text"

    />

<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbackground"
    android:hint="Email"
    android:textSize="20dp"
    android:id="@+id/signupemailid"
    android:layout_margin="7dp"
    android:textAlignment="center"
    android:inputType="textEmailAddress"

    />

<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbackground"
    android:hint="Password"
    android:textSize="20dp"
    android:id="@+id/signuppassid"
    android:layout_margin="7dp"
    android:textAlignment="center"
    android:inputType="textPassword"

    />

<EditText
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edittextbackground"
    android:hint="Confirm Password"
    android:textAlignment="center"
    android:textSize="20dp"
    android:id="@+id/signupconpassid"
    android:layout_margin="7dp"
    android:inputType="textPassword"

    />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupregisterbutonid"
        android:layout_margin="15dp"
        android:text="Register"
        android:background="@drawable/buttonback"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Register..? Signin"
        android:textSize="20dp"
        android:textColor="#0841E6"
        android:id="@+id/alreadyregisterid"


        />



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"

        android:id="@+id/progressbarid"

        />


</LinearLayout>